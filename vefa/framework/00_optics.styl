setAlphaLimits = limits.setAlpha
--set:alpha
    if !!((setAlphaLimits)px)
        for num in range(setAlphaLimits[0], setAlphaLimits[1] || 100, 5)
            &{num}
                +at-all-breaks()
                    opacity: (num/100)

shiftAlphaLimits = limits.shiftAlpha
--shift:alpha
    if !!((shiftAlphaLimits)px)
        for num in range(shiftAlphaLimits[0], shiftAlphaLimits[1] || 100, 5)
            &{num}
                +at-all-breaks()
                    +on-all-states()
                        opacity: (num/100)
