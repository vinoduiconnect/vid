// @domain          ELEMENT OPTICS
// @namespace:      optics
// +++++++++++++++++++++++++++++++++

[v-cloak]
    // special for VueJS
    display: none !important


optics
    &:a11y
        +at-all-breaks()
            clip-path: rect(0,0,0,0)
            clip-path: inset(0 0 0 0)
            left: -100vw
            overflow: hidden
            position: absolute //  !important
            width: 0

    &:no
        +at-all-breaks()
            display: none
            visibility: hidden

    &:yes
        +at-all-breaks()
            clip-path: none
            left: 0
            overflow: visible
            position: static
            width: auto
            visibility: visible
            // display: inherit

    &:voidRxn
        +at-all-breaks()
            pointer-events: none

    &:xyEq
        &--set:hidden
            +at-all-breaks()
                overflow: hidden

